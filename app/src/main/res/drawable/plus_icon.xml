<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Circle -->


    <!-- Horizontal Line -->
    <item
        android:width="3dp"
        android:height="24dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Vertical Line -->
    <item
        android:width="24dp"
        android:height="3dp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>
